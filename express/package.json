{
  "name": "express-authentication-authorization",
  "version": "1.0.0",
  "description": "implement authentication, authorization logic in typescript using express nodejs framework",
  "main": "index.js",
  "repository": "https://github.com/OptimistLabyrinth/authentication-authorization",
  "author": "OptimistLabyrinth",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "swc ./src -s -d ./dist",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "dev:watch": "NODE_ENV=development ts-node-dev --respawn src/index.ts --watch src/**/*",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rm -rf dist/ coverage/"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.4.1",
    "@stylistic/eslint-plugin-ts": "^1.4.1",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.2",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
