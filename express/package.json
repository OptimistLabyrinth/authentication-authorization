{
  "name": "express-authentication-authorization",
  "version": "1.0.0",
  "description": "implement authentication, authorization logic in typescript using express nodejs framework",
  "main": "index.js",
  "repository": "https://github.com/OptimistLabyrinth/authentication-authorization",
  "author": "OptimistLabyrinth",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "swc ./src -s -d ./dist",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "dev:watch": "NODE_ENV=development ts-node-dev --respawn src/index.ts --watch src/**/*",
    "test": "NODE_ENV=test jest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rm -rf dist/ coverage/"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.8.4",
    "morgan": "^1.10.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@swc/jest": "^0.2.24",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
